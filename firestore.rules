
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() { return request.auth != null; }
    function isAdmin() {
      return signedIn() && (
        request.auth.token.admin == true ||
        request.auth.token.email == "airdropshunterid@gmail.com"
      );
    }
    function isOwner(uid) { return signedIn() && request.auth.uid == uid; }

    match /users/{uid} {
      allow read: if isOwner(uid) || isAdmin();
      allow create: if isOwner(uid) && !exists(/databases/$(database)/documents/users/$(uid));
      allow update: if isOwner(uid) || isAdmin();
    }

    match /farmProducts/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /orders/{orderId} {
      allow create: if signedIn() && request.resource.data.userId == request.auth.uid;
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow update: if isAdmin();
    }

    match /withdrawals/{wid} {
      allow create: if signedIn() && request.resource.data.userId == request.auth.uid;
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow update: if isAdmin();
    }

    match /referrals/{rid} {
      allow read: if isAdmin() ||
        (signedIn() && (resource.data.inviterId == request.auth.uid || resource.data.inviteeId == request.auth.uid));
      allow create: if signedIn();
      allow update: if isAdmin();
    }

    match /notifications/{nid} {
      allow read: if signedIn();
      allow write: if isAdmin();
    }

    match /tasks/{tid} {
      allow read: if signedIn();
      allow write: if isAdmin();

      match /userTasks/{doc} {
        allow create: if signedIn();
        allow read: if isAdmin() || (signedIn() && resource.data.userId == request.auth.uid);
        allow update: if isAdmin();
      }
    }

    match /settings/{doc} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /supportMessages/{doc} {
      allow create: if signedIn();
      allow read: if isAdmin();
      allow update, delete: if isAdmin();
    }
  }
}
